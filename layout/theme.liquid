<!doctype html>
<html lang='{{ request.locale.iso_code }}'>
  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1'>
    <link rel='canonical' href='{{ canonical_url }}'>

    {% comment %}
      * Required Shopify injection of header elements
    {% endcomment %}
    {{ content_for_header }}

    {% comment %}
      * Theme stylesheets
    {% endcomment %}
    {% render 'theme-styles' %}
  </head>

  <body>
    {% comment %}
      * Theme header components
    {% endcomment %}
    {% section 'static-header' %}
    {% section 'static-menu' %}

    {% comment %}
      * Required Shopify injection of templates
    {% endcomment %}
    {{ content_for_layout }}

    {% comment %}
      * Theme scripts
    {% endcomment %}
    {% render 'theme-scripts' %}
  </body>
</html>
